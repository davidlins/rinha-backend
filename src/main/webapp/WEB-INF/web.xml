<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   id="WebApp_ID" version="3.0">
   <display-name>test_jetty</display-name>

   <servlet>
      <servlet-name>PessoaServlet</servlet-name>
      <servlet-class>rinha.controllers.PessoaServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>PessoaServlet</servlet-name>
      <url-pattern>/pessoas/*"</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>PessoaServlet</servlet-name>
      <url-pattern>/contagem-pessoas</url-pattern>
   </servlet-mapping>


</web-app>